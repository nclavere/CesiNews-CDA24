@model IEnumerable<CesiNewsModel.Entities.Support>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Textes" asp-action="Create">Create New Text</a>
</p>
<p>
    <a asp-controller="Videos" asp-action="Create">Create New Video</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libelle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Libelle)
                </td>
                <td>
                    @if (item is CesiNewsModel.Entities.Texte)
                    {
                        <a asp-controller="Textes" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    else
                    {
                        <a asp-controller="Videos" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
</table>
